@model IEnumerable<_1.Entity_Layer.Applicant>

@{
    ViewBag.Title = "ShowApplicantsApplied";
}

<div class="container mt-5">
    <h2>Applicants List</h2>

    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CandidateId)</th>
                <th>@Html.DisplayNameFor(model => model.VacancyId)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CandidateId)</td>
                    <td>@Html.DisplayFor(modelItem => item.VacancyId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                       @*     @Html.ActionLink("Show Candidate Details", "ShowCandidateDetails", new { id = item.CandidateId }, new { @class = "btn btn-info btn-sm" })*@
                       @*     @Html.ActionLink("View Vacancy", "ShowVacancyDetails", new { id = item.VacancyId }, new { @class = "btn btn-primary btn-sm" })*@
                            @Html.ActionLink("Accepted", "CandateAccepted", new { id = item.ApplicantId }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Rejected", "CandateRejected", new { id = item.ApplicantId }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        @Html.ActionLink("Go to Dashboard", "AgencyDashboard", null, new { @class = "btn btn-primary" })
    </p>
</div>
