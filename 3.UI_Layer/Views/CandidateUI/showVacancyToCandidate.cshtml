@model IEnumerable<_1.Entity_Layer.Vacancy>

@{
    ViewBag.Title = "ShowVacancy";
}

<div class="container mt-5">
    <h2>Vacancy List</h2>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.AgencyId)</th>
                <th>@Html.DisplayNameFor(model => model.JobTitle)</th>
                <th>@Html.DisplayNameFor(model => model.JobDescription)</th>
                <th>@Html.DisplayNameFor(model => model.JobLocation)</th>
                <th>@Html.DisplayNameFor(model => model.Salary)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AgencyId)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobDescription)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobLocation)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Apply", "CandidateApplied", new { vid = item.VacancyId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Details", "vacancyDetails", new { vid = item.VacancyId }, new { @class = "btn btn-info" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        @Html.ActionLink("Go to Dashboard", "candidateDashboard", null, new { @class = "btn btn-secondary" })
    </p>
</div>
